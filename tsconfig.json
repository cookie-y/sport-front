{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types"],
  },
  "include": ["utils/**/*.ts", "store/**/*.ts", "constants/**/*.ts", "type/**/*.d.ts", "pages/**/*.vue", "components/**/*.vue"],
}
